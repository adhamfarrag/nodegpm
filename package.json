{
  "name": "nodegpm",
  "version": "0.0.5",
  "description": "Unified management for global Node.js packages",
  "repository": "https://github.com/adhamfarrag/nodegpm",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "keywords": [
    "node",
    "nodegpm",
    "global-packages",
    "global",
    "packages",
    "package",
    "manager",
    "global package manager"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint --cache ./src --ext .ts --fix",
    "build": "unbuild",
    "release": "pnpm test && pnpm build && changelogen --release --push && pnpm publish",
    "try": "unbuild && clear && node dist/index.mjs",
    "pg": "bun run playground/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "changelogen": "^0.5.5",
    "eslint": "^8.57.0",
    "knip": "^5.7.2",
    "pathe": "^1.1.2",
    "typescript": "^5.4.3",
    "unbuild": "^2.0.0"
  },
  "dependencies": {
    "execa": "^8.0.1",
    "pkg-types": "^1.0.3"
  }
}
