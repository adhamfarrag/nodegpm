{
  "name": "nodegpm",
  "version": "0.0.4",
  "description": "Unified management for global Node.js packages",
  "repository": "https://github.com/adhamfarrag/nodegpm",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "keywords": [
    "node",
    "nodegpm",
    "global-packages",
    "global",
    "packages",
    "package",
    "manager"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@8.14.3",
  "engines": {
    "node": "^14.16.0 || >=16.10.0"
  },
  "scripts": {
    "lint": "eslint --cache ./src --ext .ts --fix",
    "build": "unbuild",
    "release": "pnpm test && pnpm build && changelogen --release --push && pnpm publish",
    "try": "unbuild && clear && node dist/index.mjs",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage",
    "test:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^0.34.6",
    "changelogen": "^0.5.5",
    "consola": "^3.2.3",
    "eslint": "^8.56.0",
    "pathe": "^1.1.2",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "execa": "^8.0.1"
  },
  "pnpm": {
    "overrides": {
      "postcss@<8.4.31": ">=8.4.31",
      "vite@>=4.4.0 <4.4.12": ">=4.4.12",
      "@babel/traverse@<7.23.2": ">=7.23.2",
      "vite@>=4.0.0 <=4.5.1": ">=4.5.2"
    }
  }
}